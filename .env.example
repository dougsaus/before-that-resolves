# OpenAI API Configuration (models/settings only; API key is provided in the UI)
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Scryfall API (no key needed, but we'll respect rate limits)
SCRYFALL_API_URL=https://api.scryfall.com

# Logging Configuration
LOG_LEVEL=info

# Agent Configuration
DEFAULT_AGENT_TIMEOUT=30000
MAX_TOOL_CALLS=10

# Google login (deck collections)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Database (Postgres)
# Prefer DATABASE_URL; fall back to DB_* settings below.
DATABASE_URL=postgresql://btr:btr@localhost:5432/btr
DB_HOST=localhost
DB_PORT=5432
DB_NAME=btr
DB_USER=btr
DB_PASSWORD=btr
DB_SSL=false
CLOUD_SQL_INSTANCE=before-that-resolves:us-central1:btr-postgres
