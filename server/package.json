{
  "name": "@before-that-resolves/server",
  "version": "1.1.0",
  "private": true,
  "description": "Express API server for Before That Resolves - Commander assistant",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc && node scripts/copy-prompts.mjs",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "vitest run",
    "test:live": "RUN_LIVE_TESTS=1 vitest run",
    "test:integration": "RUN_INTEGRATION_TESTS=1 vitest run"
  },
  "dependencies": {
    "@openai/agents": "^0.3.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "marked": "^12.0.2",
    "openai": "^6.15.0",
    "pg": "^8.13.3",
    "playwright": "^1.54.1",
    "zod": "^4.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@eslint/js": "^9.39.2",
    "@testcontainers/postgresql": "^10.17.1",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.10.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^3.2.4"
  }
}
